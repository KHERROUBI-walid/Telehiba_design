{% extends 'base/layout.html.twig' %}

{% set show_bottom_navigation = true %}
{% set user_type = 'vendeur' %}

{% block title %}Mes Commandes - TeleHiba{% endblock %}

{% block content %}
<div class="pb-20">
    <!-- En-tête -->
    <div class="bg-white px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-800">Mes Commandes</h1>
            <button class="p-2 text-gray-600 hover:text-app-purple">
                <i data-lucide="filter" class="w-6 h-6"></i>
            </button>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="px-6 py-4 bg-gray-50">
        <div class="grid grid-cols-4 gap-3">
            <div class="bg-white rounded-xl p-3 text-center shadow-sm">
                <div class="text-lg font-bold text-orange-600">{{ stats.en_attente|default('5') }}</div>
                <div class="text-gray-600 text-xs">En attente</div>
            </div>
            <div class="bg-white rounded-xl p-3 text-center shadow-sm">
                <div class="text-lg font-bold text-blue-600">{{ stats.en_preparation|default('3') }}</div>
                <div class="text-gray-600 text-xs">Préparation</div>
            </div>
            <div class="bg-white rounded-xl p-3 text-center shadow-sm">
                <div class="text-lg font-bold text-green-600">{{ stats.pretes|default('2') }}</div>
                <div class="text-gray-600 text-xs">Prêtes</div>
            </div>
            <div class="bg-white rounded-xl p-3 text-center shadow-sm">
                <div class="text-lg font-bold text-gray-600">{{ stats.livrees|default('45') }}</div>
                <div class="text-gray-600 text-xs">Livrées</div>
            </div>
        </div>
    </div>

    <!-- Filtres de statut -->
    <div class="px-6 py-4">
        <div class="flex gap-3 overflow-x-auto">
            <button class="px-4 py-2 bg-app-purple text-white rounded-full text-sm font-medium whitespace-nowrap">
                Toutes
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                En attente
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Préparation
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Prêtes
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Livrées
            </button>
        </div>
    </div>

    <!-- Liste des commandes -->
    <div class="px-6">
        <div class="space-y-4">
            <!-- Commande 1 - En attente -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-gray-100">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <h3 class="font-medium text-gray-800">Commande #V001</h3>
                            <span class="px-3 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">En attente</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Machado</p>
                        <p class="text-gray-500 text-xs">{{ 'now'|date('d/m/Y H:i') }}</p>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-gray-800">€18.50</div>
                        <div class="text-sm text-gray-500">3 produits</div>
                    </div>
                </div>
                
                <div class="space-y-2 mb-4">
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-sm text-gray-700">2x Baguette tradition</span>
                        <span class="text-sm font-medium">€2.40</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-sm text-gray-700">1x Croissant</span>
                        <span class="text-sm font-medium">€1.10</span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-sm text-gray-700">1x Pain complet</span>
                        <span class="text-sm font-medium">€2.50</span>
                    </div>
                </div>
                
                <div class="flex gap-3">
                    <button class="flex-1 bg-app-purple text-white py-2 px-4 rounded-lg font-medium text-sm">
                        Accepter & Préparer
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium text-sm">
                        Refuser
                    </button>
                </div>
            </div>

            <!-- Commande 2 - En préparation -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-blue-200">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <h3 class="font-medium text-gray-800">Commande #V002</h3>
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">Préparation</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Dupont</p>
                        <p class="text-gray-500 text-xs">{{ 'now'|date('d/m/Y H:i', '-45 minutes') }}</p>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-gray-800">€24.30</div>
                        <div class="text-sm text-gray-500">5 produits</div>
                    </div>
                </div>
                
                <div class="space-y-2 mb-4">
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-sm text-gray-700">3x Pain au chocolat</span>
                        <span class="text-sm font-medium">€3.30</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-sm text-gray-700">2x Baguette bio</span>
                        <span class="text-sm font-medium">€3.00</span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-sm text-gray-700">1x Tarte aux pommes</span>
                        <span class="text-sm font-medium">€8.50</span>
                    </div>
                </div>
                
                <div class="mb-4">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-gray-600">Progression</span>
                        <span class="text-sm font-medium">75%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-blue-500 h-2 rounded-full" style="width: 75%"></div>
                    </div>
                </div>
                
                <button class="w-full bg-green-600 text-white py-2 px-4 rounded-lg font-medium text-sm">
                    Marquer comme prête
                </button>
            </div>

            <!-- Commande 3 - Prête -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-green-200">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <h3 class="font-medium text-gray-800">Commande #V003</h3>
                            <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Prête</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Martin</p>
                        <p class="text-gray-500 text-xs">{{ 'now'|date('d/m/Y H:i', '-1 hour') }}</p>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-gray-800">€12.80</div>
                        <div class="text-sm text-gray-500">2 produits</div>
                    </div>
                </div>
                
                <div class="space-y-2 mb-4">
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-sm text-gray-700">1x Pain de campagne</span>
                        <span class="text-sm font-medium">€2.80</span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-sm text-gray-700">4x Viennoiseries mix</span>
                        <span class="text-sm font-medium">€6.00</span>
                    </div>
                </div>
                
                <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
                    <div class="flex items-center gap-2">
                        <i data-lucide="clock" class="w-4 h-4 text-green-600"></i>
                        <span class="text-sm text-green-800">Commande prête depuis 15 minutes</span>
                    </div>
                </div>
                
                <div class="flex gap-3">
                    <button class="flex-1 bg-green-600 text-white py-2 px-4 rounded-lg font-medium text-sm">
                        <i data-lucide="qr-code" class="w-4 h-4 inline mr-2"></i>
                        Générer QR Code
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium text-sm">
                        Contacter
                    </button>
                </div>
            </div>

            <!-- Commande 4 - Livrée -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-gray-100 opacity-75">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <div class="flex items-center gap-2 mb-1">
                            <h3 class="font-medium text-gray-800">Commande #V004</h3>
                            <span class="px-3 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Livrée</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Leroy</p>
                        <p class="text-gray-500 text-xs">{{ 'yesterday'|date('d/m/Y H:i') }}</p>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-gray-800">€15.60</div>
                        <div class="text-sm text-gray-500">4 produits</div>
                    </div>
                </div>
                
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <i data-lucide="check-circle" class="w-4 h-4 text-green-600"></i>
                        <span class="text-sm text-gray-600">Livrée avec succès</span>
                    </div>
                    <button class="text-app-purple text-sm font-medium">
                        Voir détails
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Résumé du jour -->
    <div class="px-6 py-6">
        <div class="bg-gradient-to-r from-app-purple/10 to-app-pink/10 border border-app-purple/20 rounded-xl p-4">
            <h3 class="font-medium text-gray-800 mb-3">Résumé du jour</h3>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <div class="text-lg font-bold text-app-purple">8 commandes</div>
                    <div class="text-gray-600 text-sm">Traitées aujourd'hui</div>
                </div>
                <div>
                    <div class="text-lg font-bold text-green-600">€156.40</div>
                    <div class="text-gray-600 text-sm">Chiffre d'affaires</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
