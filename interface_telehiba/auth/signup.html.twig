{% extends 'base/layout.html.twig' %}

{% set hide_navigation = true %}

{% block title %}Inscription - TeleHiba{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-app-pink via-app-purple to-app-blue relative overflow-hidden">
    <!-- En-tête -->
    <div class="relative z-10 pt-12 pb-8">
        <div class="flex items-center justify-between px-6">
            <a href="/" class="text-white hover:scale-110 transition-transform duration-300">
                <i data-lucide="arrow-left" class="w-6 h-6"></i>
            </a>
            <div class="text-center">
                <h1 class="text-2xl font-bold text-white">Inscription</h1>
                <p class="text-white/80 text-sm mt-1">Rejoignez notre communauté</p>
            </div>
            <div class="w-6"></div>
        </div>
    </div>

    <!-- Formulaire d'inscription -->
    <div class="relative z-10 px-6">
        <div class="bg-white/95 backdrop-blur-xl rounded-3xl p-8 mx-auto max-w-md shadow-2xl border border-white/20">
            
            <form method="post" action="/signup" class="space-y-6">
                <!-- Type d'utilisateur -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Type de compte</label>
                    <div class="grid grid-cols-3 gap-3">
                        <label class="cursor-pointer">
                            <input type="radio" name="type_utilisateur" value="famille" class="sr-only peer" checked>
                            <div class="p-4 bg-gray-50 border border-gray-200 rounded-xl text-center peer-checked:bg-app-purple peer-checked:text-white peer-checked:border-app-purple transition-colors">
                                <i data-lucide="users" class="w-6 h-6 mx-auto mb-2"></i>
                                <span class="text-sm font-medium">Famille</span>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="type_utilisateur" value="vendeur" class="sr-only peer">
                            <div class="p-4 bg-gray-50 border border-gray-200 rounded-xl text-center peer-checked:bg-app-purple peer-checked:text-white peer-checked:border-app-purple transition-colors">
                                <i data-lucide="store" class="w-6 h-6 mx-auto mb-2"></i>
                                <span class="text-sm font-medium">Vendeur</span>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="type_utilisateur" value="donateur" class="sr-only peer">
                            <div class="p-4 bg-gray-50 border border-gray-200 rounded-xl text-center peer-checked:bg-app-purple peer-checked:text-white peer-checked:border-app-purple transition-colors">
                                <i data-lucide="heart" class="w-6 h-6 mx-auto mb-2"></i>
                                <span class="text-sm font-medium">Donateur</span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Prénom et Nom -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="prenom" class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
                        <input type="text" id="prenom" name="prenom" placeholder="ex: Walid" required
                               class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                    <div>
                        <label for="nom" class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
                        <input type="text" id="nom" name="nom" placeholder="ex: Kherroubi" required
                               class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <div class="relative">
                        <i data-lucide="mail" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"></i>
                        <input type="email" id="email" name="email" placeholder="votre@email.com" required
                               class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                </div>

                <!-- Téléphone -->
                <div>
                    <label for="telephone" class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
                    <div class="relative">
                        <i data-lucide="phone" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"></i>
                        <input type="tel" id="telephone" name="telephone" placeholder="ex: 0668074373"
                               class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                </div>

                <!-- Ville -->
                <div>
                    <label for="ville" class="block text-sm font-medium text-gray-700 mb-2">Ville</label>
                    <div class="relative">
                        <i data-lucide="map-pin" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"></i>
                        <input type="text" id="ville" name="ville" placeholder="ex: CAMBRAI"
                               class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                </div>

                <!-- Mot de passe -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Mot de passe</label>
                    <div class="relative">
                        <i data-lucide="lock" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5"></i>
                        <input type="password" id="password" name="password" placeholder="••••••••" required
                               class="w-full pl-12 pr-12 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:border-app-purple focus:ring-2 focus:ring-app-purple/20 transition-colors">
                    </div>
                </div>

                <!-- Bouton d'inscription -->
                <button type="submit" class="w-full bg-gradient-to-r from-app-pink to-app-purple text-white font-semibold py-3 rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300">
                    Créer mon compte
                </button>
            </form>

            <!-- Lien de connexion -->
            <div class="text-center mt-6">
                <p class="text-gray-600 text-sm">
                    Déjà un compte ? 
                    <a href="/login" class="text-app-purple font-semibold hover:text-app-pink transition-colors duration-300">
                        Se connecter
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Espacement du bas -->
    <div class="h-20"></div>
</div>
{% endblock %}
