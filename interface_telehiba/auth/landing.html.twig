{% extends 'base/layout.html.twig' %}

{% set hide_navigation = true %}

{% block title %}TeleHiba - Marketplace Solidaire{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-app-pink via-app-purple to-app-blue relative overflow-hidden">
    <!-- Éléments de fond animés -->
    <div class="absolute top-1/4 -right-20 w-64 h-64 bg-gradient-to-br from-white/10 to-app-pink/20 rounded-full animate-pulse"></div>
    <div class="absolute bottom-1/3 -left-20 w-48 h-48 bg-gradient-to-br from-app-blue/20 to-white/10 rounded-full animate-bounce"></div>

    <!-- En-tête -->
    <div class="relative z-10 pt-12 pb-8">
        <div class="text-center px-6">
            <div class="w-24 h-24 bg-white/20 backdrop-blur-xl rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-2xl">
                <i data-lucide="heart" class="w-12 h-12 text-white"></i>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">TeleHiba</h1>
            <p class="text-white/80 text-lg">Marketplace solidaire</p>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="relative z-10 px-6 mb-8">
        <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-6 shadow-2xl border border-white/20">
            <h2 class="text-white text-xl font-semibold mb-4">Impact communautaire</h2>
            <div class="grid grid-cols-2 gap-4">
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">{{ statistics.total_families|default('150') }}</div>
                    <div class="text-white/80 text-sm">Familles aidées</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">{{ statistics.total_vendors|default('45') }}</div>
                    <div class="text-white/80 text-sm">Vendeurs partenaires</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">{{ statistics.total_donations|default('€25,430') }}</div>
                    <div class="text-white/80 text-sm">Montant des dons</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">{{ statistics.total_orders|default('680') }}</div>
                    <div class="text-white/80 text-sm">Commandes traitées</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions principales -->
    <div class="relative z-10 px-6 space-y-4">
        <a href="/login" class="block w-full bg-white text-app-purple font-semibold py-4 px-6 rounded-2xl text-center shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
            <div class="flex items-center justify-center gap-3">
                <i data-lucide="log-in" class="w-6 h-6"></i>
                <span>Se connecter</span>
            </div>
        </a>

        <a href="/signup" class="block w-full bg-white/20 backdrop-blur-xl text-white font-semibold py-4 px-6 rounded-2xl text-center border border-white/30 hover:bg-white/30 transition-all duration-300">
            <div class="flex items-center justify-center gap-3">
                <i data-lucide="user-plus" class="w-6 h-6"></i>
                <span>Créer un compte</span>
            </div>
        </a>
    </div>

    <!-- Fonctionnalités -->
    <div class="relative z-10 px-6 mt-12">
        <div class="grid grid-cols-1 gap-6">
            <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20">
                <div class="flex items-center gap-4 mb-3">
                    <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                        <i data-lucide="users" class="w-6 h-6 text-white"></i>
                    </div>
                    <h3 class="text-white font-semibold text-lg">Pour les familles</h3>
                </div>
                <p class="text-white/80">Commandez des produits essentiels grâce aux donations de notre communauté.</p>
            </div>

            <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20">
                <div class="flex items-center gap-4 mb-3">
                    <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                        <i data-lucide="store" class="w-6 h-6 text-white"></i>
                    </div>
                    <h3 class="text-white font-semibold text-lg">Pour les vendeurs</h3>
                </div>
                <p class="text-white/80">Participez à une démarche solidaire en proposant vos produits.</p>
            </div>

            <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20">
                <div class="flex items-center gap-4 mb-3">
                    <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                        <i data-lucide="heart" class="w-6 h-6 text-white"></i>
                    </div>
                    <h3 class="text-white font-semibold text-lg">Pour les donateurs</h3>
                </div>
                <p class="text-white/80">Aidez directement les familles en besoin avec vos donations.</p>
            </div>
        </div>
    </div>

    <!-- Espacement du bas -->
    <div class="h-20"></div>
</div>
{% endblock %}
