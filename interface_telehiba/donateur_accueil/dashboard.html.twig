{% extends 'base/layout.html.twig' %}

{% set show_bottom_navigation = true %}
{% set user_type = 'donateur' %}

{% block title %}Espace Donateur - TeleHiba{% endblock %}

{% block content %}
<div class="pb-20">
    <!-- En-tête de bienvenue -->
    <div class="bg-gradient-to-r from-app-pink to-app-purple px-6 py-8 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold">Bienvenue {{ user.prenom|default('Alberto') }} !</h1>
                <p class="text-white/80">Merci pour votre générosité</p>
            </div>
            <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                <i data-lucide="heart" class="w-8 h-8"></i>
            </div>
        </div>
    </div>

    <!-- Impact des donations -->
    <div class="px-6 -mt-4">
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-800">Mon impact</h2>
                <i data-lucide="trending-up" class="w-6 h-6 text-green-600"></i>
            </div>
            <div class="text-3xl font-bold text-green-600 mb-2">{{ total_dons|default('€450.75') }}</div>
            <p class="text-gray-600 text-sm mb-4">Total de vos donations</p>
            
            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-100">
                <div class="text-center">
                    <div class="text-xl font-bold text-app-purple">{{ familles_aidees|default('12') }}</div>
                    <div class="text-gray-600 text-sm">Familles aidées</div>
                </div>
                <div class="text-center">
                    <div class="text-xl font-bold text-app-pink">{{ dons_mois|default('€85.50') }}</div>
                    <div class="text-gray-600 text-sm">Ce mois-ci</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="px-6 mt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Actions rapides</h3>
        <div class="grid grid-cols-2 gap-4">
            <a href="/donateur/donation" class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
                    <i data-lucide="heart-handshake" class="w-6 h-6 text-green-600"></i>
                </div>
                <h4 class="font-semibold text-gray-800 mb-1">Faire un don</h4>
                <p class="text-gray-600 text-sm">Aider une famille</p>
            </a>
            
            <a href="/donateur/cagnottes" class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                    <i data-lucide="target" class="w-6 h-6 text-blue-600"></i>
                </div>
                <h4 class="font-semibold text-gray-800 mb-1">Cagnottes</h4>
                <p class="text-gray-600 text-sm">Objectifs collectifs</p>
            </a>
        </div>
    </div>

    <!-- Cagnottes actives -->
    <div class="px-6 mt-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Cagnottes actives</h3>
            <a href="/donateur/cagnottes" class="text-app-purple text-sm font-medium">Voir tout</a>
        </div>
        
        <div class="space-y-4">
            <!-- Cagnotte 1 -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-gray-100">
                <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-800 mb-1">Famille Dupont - Courses de la semaine</h4>
                        <p class="text-gray-600 text-sm">4 enfants • Nice</p>
                    </div>
                    <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">En cours</span>
                </div>
                
                <div class="mb-3">
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600">Objectif: €120.00</span>
                        <span class="font-medium">75%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-gradient-to-r from-app-pink to-app-purple h-2 rounded-full" style="width: 75%"></div>
                    </div>
                    <div class="text-right text-sm text-gray-600 mt-1">€90.00 collectés</div>
                </div>
                
                <button class="w-full bg-gradient-to-r from-app-pink to-app-purple text-white font-medium py-2 rounded-lg">
                    Contribuer
                </button>
            </div>

            <!-- Cagnotte 2 -->
            <div class="bg-white rounded-xl p-5 shadow-lg border border-gray-100">
                <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-800 mb-1">Famille Martin - Produits d'hygiène</h4>
                        <p class="text-gray-600 text-sm">2 enfants • Lyon</p>
                    </div>
                    <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Urgent</span>
                </div>
                
                <div class="mb-3">
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600">Objectif: €65.00</span>
                        <span class="font-medium">45%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-gradient-to-r from-green-400 to-green-600 h-2 rounded-full" style="width: 45%"></div>
                    </div>
                    <div class="text-right text-sm text-gray-600 mt-1">€29.25 collectés</div>
                </div>
                
                <button class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white font-medium py-2 rounded-lg">
                    Aider maintenant
                </button>
            </div>
        </div>
    </div>

    <!-- Dernières donations -->
    <div class="px-6 mt-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Mes dernières donations</h3>
            <a href="/donateur/historique" class="text-app-purple text-sm font-medium">Historique</a>
        </div>
        
        <div class="space-y-3">
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center">
                            <i data-lucide="heart" class="w-5 h-5 text-green-600"></i>
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-800">Famille Machado</h4>
                            <p class="text-gray-600 text-sm">{{ 'yesterday'|date('d/m/Y') }}</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-green-600">€25.00</div>
                        <div class="text-xs text-gray-500">Courses alimentaires</div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
                            <i data-lucide="target" class="w-5 h-5 text-blue-600"></i>
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-800">Cagnotte Famille Dupont</h4>
                            <p class="text-gray-600 text-sm">{{ '2 days ago'|date('d/m/Y') }}</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-blue-600">€15.00</div>
                        <div class="text-xs text-gray-500">Cagnotte collective</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Témoignages -->
    <div class="px-6 mt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Témoignages</h3>
        <div class="bg-gradient-to-r from-app-pink/10 to-app-purple/10 border border-app-purple/20 rounded-xl p-4">
            <div class="flex items-start gap-3">
                <i data-lucide="quote" class="w-5 h-5 text-app-purple mt-1"></i>
                <div class="flex-1">
                    <p class="text-gray-700 text-sm italic mb-2">
                        "Grâce à votre générosité, nous avons pu faire nos courses de la semaine. 
                        Merci infiniment pour votre soutien !"
                    </p>
                    <p class="text-app-purple text-sm font-medium">- Famille Machado</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
