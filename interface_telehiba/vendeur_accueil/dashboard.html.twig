{% extends 'base/layout.html.twig' %}

{% set show_bottom_navigation = true %}
{% set user_type = 'vendeur' %}

{% block title %}Boutique Vendeur - TeleHiba{% endblock %}

{% block content %}
<div class="pb-20">
    <!-- En-tête de bienvenue -->
    <div class="bg-gradient-to-r from-app-purple to-app-blue px-6 py-8 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold">{{ user.nom_societe|default('Boulangerie Walid') }}</h1>
                <p class="text-white/80">{{ user.prenom|default('Walid') }} {{ user.nom|default('Kherroubi') }}</p>
            </div>
            <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                <i data-lucide="store" class="w-8 h-8"></i>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="px-6 -mt-4">
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Statistiques du jour</h2>
            <div class="grid grid-cols-2 gap-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-app-purple">{{ stats.ventes_jour|default('8') }}</div>
                    <div class="text-gray-600 text-sm">Ventes aujourd'hui</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-green-600">{{ stats.revenus_jour|default('€156.40') }}</div>
                    <div class="text-gray-600 text-sm">Revenus du jour</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-blue-600">{{ stats.commandes_attente|default('3') }}</div>
                    <div class="text-gray-600 text-sm">En attente</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-orange-600">{{ stats.stock_faible|default('2') }}</div>
                    <div class="text-gray-600 text-sm">Stock faible</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="px-6 mt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Actions rapides</h3>
        <div class="grid grid-cols-2 gap-4">
            <a href="/vendeur/produits/nouveau" class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
                    <i data-lucide="plus" class="w-6 h-6 text-green-600"></i>
                </div>
                <h4 class="font-semibold text-gray-800 mb-1">Ajouter produit</h4>
                <p class="text-gray-600 text-sm">Nouveau produit à vendre</p>
            </a>
            
            <a href="/vendeur/scanner" class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                    <i data-lucide="qr-code" class="w-6 h-6 text-blue-600"></i>
                </div>
                <h4 class="font-semibold text-gray-800 mb-1">Scanner QR</h4>
                <p class="text-gray-600 text-sm">Valider une commande</p>
            </a>
        </div>
    </div>

    <!-- Commandes récentes -->
    <div class="px-6 mt-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Commandes récentes</h3>
            <a href="/vendeur/commandes" class="text-app-purple text-sm font-medium">Voir tout</a>
        </div>
        
        <div class="space-y-3">
            <!-- Commande 1 -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-start justify-between">
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-1">
                            <h4 class="font-medium text-gray-800">Commande #V001</h4>
                            <span class="px-2 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">En attente</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Machado • {{ 'now'|date('H:i') }}</p>
                        <div class="mt-2">
                            <p class="text-sm text-gray-700">• 2x Baguette tradition</p>
                            <p class="text-sm text-gray-700">• 1x Croissant</p>
                            <p class="text-sm font-semibold text-gray-800 mt-1">Total: €6.50</p>
                        </div>
                    </div>
                    <button class="px-3 py-1 bg-app-purple text-white text-xs font-medium rounded-lg">
                        Préparer
                    </button>
                </div>
            </div>

            <!-- Commande 2 -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-start justify-between">
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-1">
                            <h4 class="font-medium text-gray-800">Commande #V002</h4>
                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Prête</span>
                        </div>
                        <p class="text-gray-600 text-sm">Famille Dupont • {{ 'now'|date('H:i', '-30 minutes') }}</p>
                        <div class="mt-2">
                            <p class="text-sm text-gray-700">• 1x Pain complet</p>
                            <p class="text-sm text-gray-700">• 3x Pain au chocolat</p>
                            <p class="text-sm font-semibold text-gray-800 mt-1">Total: €8.20</p>
                        </div>
                    </div>
                    <button class="px-3 py-1 bg-green-600 text-white text-xs font-medium rounded-lg">
                        Livrer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Produits populaires -->
    <div class="px-6 mt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Produits populaires</h3>
        <div class="space-y-3">
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-gray-200 rounded-lg"></div>
                        <div>
                            <h4 class="font-medium text-gray-800">Baguette Tradition</h4>
                            <p class="text-gray-600 text-sm">€1.20 • Stock: 25</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm font-semibold text-green-600">12 vendues</div>
                        <div class="text-xs text-gray-500">aujourd'hui</div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-gray-200 rounded-lg"></div>
                        <div>
                            <h4 class="font-medium text-gray-800">Croissant</h4>
                            <p class="text-gray-600 text-sm">€1.10 • Stock: 18</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm font-semibold text-green-600">8 vendus</div>
                        <div class="text-xs text-gray-500">aujourd'hui</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertes -->
    <div class="px-6 mt-6">
        <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
            <div class="flex items-start gap-3">
                <i data-lucide="alert-triangle" class="w-5 h-5 text-orange-600 mt-0.5"></i>
                <div class="flex-1">
                    <h4 class="font-medium text-orange-900">Stock faible détecté</h4>
                    <p class="text-orange-700 text-sm">Pain aux raisins: seulement 3 unités restantes</p>
                    <button class="text-orange-800 text-xs font-medium mt-1 underline">Réapprovisionner</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
