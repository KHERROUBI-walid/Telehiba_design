{% extends 'base/layout.html.twig' %}

{% set show_bottom_navigation = true %}
{% set user_type = 'vendeur' %}

{% block title %}Mes Produits - TeleHiba{% endblock %}

{% block content %}
<div class="pb-20">
    <!-- En-tête -->
    <div class="bg-white px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-800">Mes Produits</h1>
            <a href="/vendeur/produits/nouveau" class="bg-app-purple text-white px-4 py-2 rounded-xl font-medium">
                <i data-lucide="plus" class="w-4 h-4 inline mr-2"></i>
                Ajouter
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="px-6 py-4 bg-gray-50">
        <div class="grid grid-cols-3 gap-4">
            <div class="bg-white rounded-xl p-4 text-center shadow-sm">
                <div class="text-2xl font-bold text-app-purple">{{ stats.total_produits|default('24') }}</div>
                <div class="text-gray-600 text-sm">Total produits</div>
            </div>
            <div class="bg-white rounded-xl p-4 text-center shadow-sm">
                <div class="text-2xl font-bold text-green-600">{{ stats.produits_actifs|default('18') }}</div>
                <div class="text-gray-600 text-sm">Disponibles</div>
            </div>
            <div class="bg-white rounded-xl p-4 text-center shadow-sm">
                <div class="text-2xl font-bold text-orange-600">{{ stats.stock_faible|default('6') }}</div>
                <div class="text-gray-600 text-sm">Stock faible</div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="px-6 py-4">
        <div class="flex gap-3 overflow-x-auto">
            <button class="px-4 py-2 bg-app-purple text-white rounded-full text-sm font-medium whitespace-nowrap">
                Tous
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Légumes
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Fruits
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Pain
            </button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium whitespace-nowrap">
                Stock faible
            </button>
        </div>
    </div>

    <!-- Liste des produits -->
    <div class="px-6">
        <div class="space-y-4">
            <!-- Produit 1 -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-start gap-4">
                    <div class="w-20 h-20 bg-gray-200 rounded-xl flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Tomates</h3>
                                <p class="text-gray-600 text-sm mb-2">Catégorie: Légumes</p>
                                <div class="flex items-center gap-4">
                                    <span class="text-lg font-bold text-app-purple">€10.00</span>
                                    <span class="text-sm text-gray-600">Stock: 10</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Disponible</span>
                                <button class="text-gray-500 hover:text-app-purple">
                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-2">
                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                <div class="bg-green-500 h-2 rounded-full" style="width: 40%"></div>
                            </div>
                            <span class="text-xs text-gray-600">Stock normal</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produit 2 -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-start gap-4">
                    <div class="w-20 h-20 bg-gray-200 rounded-xl flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Salade</h3>
                                <p class="text-gray-600 text-sm mb-2">Catégorie: Légumes</p>
                                <div class="flex items-center gap-4">
                                    <span class="text-lg font-bold text-app-purple">€4.00</span>
                                    <span class="text-sm text-gray-600">Stock: 15</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Disponible</span>
                                <button class="text-gray-500 hover:text-app-purple">
                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-2">
                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                <div class="bg-green-500 h-2 rounded-full" style="width: 60%"></div>
                            </div>
                            <span class="text-xs text-gray-600">Stock normal</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produit 3 - Stock faible -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-orange-200">
                <div class="flex items-start gap-4">
                    <div class="w-20 h-20 bg-gray-200 rounded-xl flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Pain complet</h3>
                                <p class="text-gray-600 text-sm mb-2">Catégorie: Pain</p>
                                <div class="flex items-center gap-4">
                                    <span class="text-lg font-bold text-app-purple">€2.50</span>
                                    <span class="text-sm text-gray-600">Stock: 15</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <span class="px-3 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">Stock faible</span>
                                <button class="text-gray-500 hover:text-app-purple">
                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-2">
                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                <div class="bg-orange-500 h-2 rounded-full" style="width: 15%"></div>
                            </div>
                            <span class="text-xs text-orange-600">Réapprovisionner</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produit 4 -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
                <div class="flex items-start gap-4">
                    <div class="w-20 h-20 bg-gray-200 rounded-xl flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Pommes</h3>
                                <p class="text-gray-600 text-sm mb-2">Catégorie: Fruits</p>
                                <div class="flex items-center gap-4">
                                    <span class="text-lg font-bold text-app-purple">€13.00</span>
                                    <span class="text-sm text-gray-600">Stock: 14</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Disponible</span>
                                <button class="text-gray-500 hover:text-app-purple">
                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-2">
                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                <div class="bg-green-500 h-2 rounded-full" style="width: 70%"></div>
                            </div>
                            <span class="text-xs text-gray-600">Stock correct</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produit 5 - Indisponible -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-red-200 opacity-75">
                <div class="flex items-start gap-4">
                    <div class="w-20 h-20 bg-gray-200 rounded-xl flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Croissants</h3>
                                <p class="text-gray-600 text-sm mb-2">Catégorie: Pain</p>
                                <div class="flex items-center gap-4">
                                    <span class="text-lg font-bold text-gray-500">€23.00</span>
                                    <span class="text-sm text-gray-600">Stock: 0</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <span class="px-3 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">Rupture</span>
                                <button class="text-gray-500 hover:text-app-purple">
                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mt-3 flex items-center gap-2">
                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                <div class="bg-red-500 h-2 rounded-full" style="width: 0%"></div>
                            </div>
                            <span class="text-xs text-red-600">Rupture de stock</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions en lot -->
    <div class="px-6 py-6">
        <div class="bg-gray-50 rounded-xl p-4">
            <h3 class="font-medium text-gray-800 mb-3">Actions rapides</h3>
            <div class="grid grid-cols-2 gap-3">
                <button class="bg-white text-gray-700 px-4 py-3 rounded-lg border border-gray-200 font-medium text-sm">
                    <i data-lucide="eye-off" class="w-4 h-4 inline mr-2"></i>
                    Masquer sélection
                </button>
                <button class="bg-app-purple text-white px-4 py-3 rounded-lg font-medium text-sm">
                    <i data-lucide="refresh-cw" class="w-4 h-4 inline mr-2"></i>
                    Mettre à jour stock
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
